<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FamilymadeShopApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FamilymadeShopApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow flex-nowrap">
            <div class="container-fluid mx-2">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/img/familymade_shop.png" alt="FamilymadeShopApp Logo" class="" style="max-width: 220px; height: auto;" />
                </a>
                <div class="input-group d-none d-sm-flex w-50">
                    <input type="text" class="form-control border" placeholder="What are you looking for?" aria-label="Search" aria-describedby="button-addon2" />
                    <a class="btn btn-light border shadow-0 text-dark" data-mdb-ripple-color="dark" asp-area="" asp-page="/ProductListingPage">
                        Search
                    </a>
                </div>

                <div class="d-flex">
                    <a class="btn btn-light text-secondary position-relative me-2" asp-area="" asp-page="/Login">
                        <i class="fas fa-user"></i>
                    </a>

                    <a class="btn btn-light text-secondary position-relative" asp-area="" asp-page="/Cart">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle">0</span>
                    </a>
                </div>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
        
        <div class="container-fluid bg-light collapse navbar-collapse" id="navmenu">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-page="/ProductListingPage">Category 1</a>
                </li> 
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-page="/ProductListingPage">Category 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-page="/ProductListingPage">Category 3</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-area="" asp-page="/ProductListingPage">Category 4</a>
                </li>
            </ul>
        </div>

        <span class="navbar-toggler-icon"></span>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted text-center text-lg-start text-muted bg-primary mt-3">
        <section class="">
            <div class="container text-center text-md-start pt-4 pb-4">
                <div class="row mt-3">
                    <div class="col-12 col-lg-3 col-sm-12 mb-2">
                        <a target="_blank" class="text-white h2" asp-area="" asp-page="#">
                            Familymade Shop
                        </a>
                        <p class="mt-1 text-white">
                            &copy; 2024 - FamilymadeShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
                        </p>
                    </div>
                
                    <div class="col-6 col-sm-4 col-lg-2">
                        <h6 class="text-uppercase text-white fw-bold mb-2">
                        Store
                        </h6>
                        <ul class="list-unstyled mb-4">
                            <li><a class="text-white-50" asp-area="" asp-page="#">About us</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Find store</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Categories</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Blogs</a></li>
                        </ul>
                    </div>

                    <div class="col-6 col-sm-4 col-lg-2">
                        <h6 class="text-uppercase text-white fw-bold mb-2">
                        Information
                        </h6>
                        <ul class="list-unstyled mb-4">
                            <li><a class="text-white-50" asp-area="" asp-page="#">Help center</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Money refund</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Shipping info</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Refunds</a></li>
                        </ul>
                    </div>

                    <div class="col-6 col-sm-4 col-lg-2">
                        <h6 class="text-uppercase text-white fw-bold mb-2">
                        Support
                        </h6>
                        <ul class="list-unstyled mb-4">
                            <li><a class="text-white-50" asp-area="" asp-page="#">Help center</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Documents</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">Account restore</a></li>
                            <li><a class="text-white-50" asp-area="" asp-page="#">My orders</a></li>
                        </ul>
                    </div>

                    <div class="col-12 col-sm-12 col-lg-3">
                        <h6 class="text-uppercase text-white fw-bold mb-2">Newsletter</h6>
                        <p class="text-white">Stay in touch with latest updates about our products and offers</p>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control border" placeholder="Email" aria-label="Email" aria-describedby="button-addon2" />
                            <button class="btn btn-light border shadow-0" type="button" id="button-addon2" data-mdb-ripple-color="dark">
                                Join
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </footer>

@*     <footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2024 - FamilymadeShopApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>