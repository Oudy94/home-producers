@page
@model WebApp.Pages.LoginModel
@{
}

<div class="row justify-content-sm-center h-100">
	<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
		<div class="card shadow-lg">
			<div class="card-body p-5">
				<h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
				<form method="POST" autocomplete="off">
					<div class="mb-3">
						<label class="mb-2 text-muted" asp-for="Credential.Email"></label>
						<span class="text-danger" asp-validation-for="Credential.Email"></span>
						<input class="form-control" asp-for="Credential.Email" autofocus>
					</div>

					<div class="mb-3">
						<div class="mb-2 w-100">
							<label class="text-muted" asp-for="Credential.Password"></label>
							<span class="text-danger" asp-validation-for="Credential.Password"></span>
							<a href="/" class="float-end text-secondary">
								Forgot Password?
							</a>
						</div>
						<input class="form-control" asp-for="Credential.Password">
					</div>

					<div class="d-flex align-items-center">
						<div class="form-check">
							<input type="checkbox" name="remember" id="remember" class="form-check-input">
							<label for="remember" class="form-check-label">Remember Me</label>
						</div>
						<button type="submit" class="btn btn-secondary ms-auto">
							Login
						</button>
					</div>
				</form>
			</div>
			<div class="card-footer py-3 border-0">
				<div class="text-center">
					Don't have an account? <a asp-area="" asp-page="/Register" class="text-secondary fw-bold">Create One</a>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
