@page
@model WebApp.Pages.RegisterModel
@{
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h1 class="fs-4 card-title fw-bold mb-4">Sign-Up</h1>
                        <form method="POST">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label class="mb-2 text-muted" asp-for="Credential.Name"></label>
                                <span class="text-danger" asp-validation-for="Credential.Name"></span>
                                <input class="form-control" asp-for="Credential.Name">
                            </div>

                            <div class="mb-3">
                                <label class="mb-2 text-muted" asp-for="Credential.Email"></label>
                                <span class="text-danger" asp-validation-for="Credential.Email"></span>
                                <input class="form-control" asp-for="Credential.Email">
                            </div>

                            <div class="mb-3">
                                <div class="mb-2 w-100">
                                    <label class="text-muted" asp-for="Credential.Password">Password</label>
                                    <span class="text-danger" asp-validation-for="Credential.Password"></span>
                                </div>
                                <input class="form-control" asp-for="Credential.Password">
                            </div>

                            <div class="d-flex align-items-center">
                                <button type="submit" class="btn btn-secondary ms-auto">
                                    Create
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            Already have an account? <a asp-area="" asp-page="/Login" class="text-secondary fw-bold">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
